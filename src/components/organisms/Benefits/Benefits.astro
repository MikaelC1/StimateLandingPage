---
import Subtitle from "../../atoms/Subtitle.astro"
import BenefitsCard from "../../molecules/BenefitsCard.astro"

const contentCard = [
    {
        "id":"1",
        "title":"¡Empieza!",
        "color":"lightAccent",
        "body":"¡Únete a nuestra comunidad de freelancers y comienza a cotizar tus proyectos hoy mismo!",
        "icon":"iconEmpieza.svg"
    },
    {
        "id":"2",
        "title":"Agiliza",
        "color":"lightAccent",
        "body":"Agiliza el proceso de cotización, reduciendo el tiempo que pasas haciendo estimaciones manuales.",
        "icon":"iconAgiliza.svg"
    },
    {
        "id":"3",
        "title":"Simplifica",
        "color":"lightAccent",
        "body":"Olvídate de las hojas de cálculo y las plantillas complicadas. Con nuestra plataforma intuitiva, podrás generar cotizaciones detalladas y personalizadas en cuestión de minutos.",
        "icon":"iconSimplifica.svg"
    }
]
---
<section class='flex flex-col text-center w-full py-8 lg:px-20 md:px-0 px-4 gap-16 items-center justify-center'>

    <Subtitle Color="lightAccent" >Transforma tu experiencia en ganancias reales</Subtitle>

    <div class="flex flex-col flex-wrap items-center justify-center text-start lg:flex-nowrap lg:static lg:justify-between md:flex-row w-full px-10 md:py-6 md:px-10 gap-16 lg:gap-0 lg:rounded-3xl lg:shadow-[10px_10px_15px_rgba(0,0,0,0.1)]">
        {
            contentCard.map((card)=>(
                <BenefitsCard 
                icon={card.icon}
                title={card.title}
                color={card.color}
                body={card.body}
                id={card.id}
                />
            ))
        }
    </div>
</section>